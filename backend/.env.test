# Test Environment Configuration
NODE_ENV=test
PORT=3002

# Test Database (SQLite in-memory for testing)
DATABASE_URL=postgresql://test:test@localhost:5432/dragndrop_test

# JWT Authentication
JWT_SECRET=test-jwt-secret-key-for-testing-only-min-32-chars-long
JWT_EXPIRES_IN=7d

# Better Auth
BETTER_AUTH_SECRET=test-better-auth-secret-for-testing
BETTER_AUTH_URL=http://localhost:3002

# SMTP Email Service (Mocked in tests)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=test@example.com
SMTP_PASS=test-password
SMTP_FROM="DragNDrop Test <noreply@test.com>"

# Stripe Payments (Mockup mode)
STRIPE_PUBLISHABLE_KEY=pk_test_mock
STRIPE_SECRET_KEY=sk_test_mock
STRIPE_WEBHOOK_SECRET=whsec_mock
STRIPE_MOCKUP_MODE=true

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Redis (disabled for tests)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# Logs
LOG_LEVEL=error

# Rate Limiting (relaxed for tests)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# OTP
OTP_EXPIRATION_MINUTES=10
OTP_LENGTH=6

# Security
BCRYPT_ROUNDS=4
SESSION_SECRET=test-session-secret

# Sentry (disabled)
SENTRY_DSN=
SENTRY_ENABLED=false

# Posthog (disabled)
POSTHOG_API_KEY=
POSTHOG_HOST=
POSTHOG_ENABLED=false
