# Server
NODE_ENV=development
PORT=3001

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/dragndrop_commercial

# Database Connection Pool Configuration
DB_POOL_MAX=20                # Maximum connections in pool (default: 20)
DB_IDLE_TIMEOUT=30            # Idle connection timeout in seconds (default: 30)
DB_CONNECT_TIMEOUT=10         # Connection timeout in seconds (default: 10)
DB_MAX_LIFETIME=3600          # Maximum connection lifetime in seconds (default: 3600)
DB_DEBUG=false                # Enable connection pool debug logs (default: false)

# JWT Authentication
JWT_SECRET=change-this-to-a-very-long-random-string-min-32-chars
JWT_EXPIRES_IN=7d

# Better Auth
BETTER_AUTH_SECRET=change-this-to-another-long-random-string
BETTER_AUTH_URL=http://localhost:3001

# OAuth Providers (optional para MVP)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# SMTP Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM="DragNDrop <noreply@dragndrop.com>"

# Stripe Payments (mockup mode para MVP)
STRIPE_PUBLISHABLE_KEY=pk_test_51...
STRIPE_SECRET_KEY=sk_test_51...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_MOCKUP_MODE=true

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Redis (optional - para sessions y cache)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# Logs
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OTP
OTP_EXPIRATION_MINUTES=10
OTP_LENGTH=6

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=another-random-string-for-sessions

# Sentry (optional - para error tracking en producci√≥n)
SENTRY_DSN=https://...@sentry.io/...
SENTRY_ENABLED=false

# Posthog (optional - para analytics)
POSTHOG_API_KEY=phc_...
POSTHOG_HOST=https://app.posthog.com
POSTHOG_ENABLED=false
