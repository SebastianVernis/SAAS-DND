{
  "name": "saas-dnd",
  "version": "1.0.0",
  "description": "DragNDrop SaaS - Sistema comercial completo con autenticaciÃ³n, team management, pagos y editor visual",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "dev:api": "turbo run dev --filter=@saas-dnd/api",
    "dev:web": "turbo run dev --filter=@saas-dnd/web",
    "build": "turbo run build",
    "build:api": "turbo run build --filter=@saas-dnd/api",
    "build:web": "turbo run build --filter=@saas-dnd/web",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint --fix",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:all": "pnpm clean && find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "db:studio": "cd apps/api && pnpm db:studio",
    "db:push": "cd apps/api && pnpm db:push",
    "db:migrate": "cd apps/api && pnpm db:migrate",
    "db:seed": "cd apps/api && pnpm db:seed",
    "docker:up": "docker-compose -f infrastructure/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infrastructure/docker-compose.yml down",
    "docker:logs": "docker-compose -f infrastructure/docker-compose.yml logs -f",
    "nginx:setup": "sudo ./scripts/deploy/setup-nginx.sh",
    "nginx:deploy": "sudo ./scripts/deploy/deploy-subdirs.sh",
    "prepare": "husky install",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "turbo run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@playwright/test": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "playwright": "^1.57.0",
    "prettier": "^3.1.1",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "saas",
    "html-editor",
    "visual-editor",
    "drag-and-drop",
    "typescript",
    "react",
    "nodejs",
    "express",
    "postgresql"
  ],
  "author": "Sebastian Vernis <sebastianvernis@example.com>",
  "license": "PROPRIETARY",
  "repository": {
    "type": "git",
    "url": "https://github.com/SebastianVernis/SAAS-DND.git"
  },
  "bugs": {
    "url": "https://github.com/SebastianVernis/SAAS-DND/issues"
  },
  "homepage": "https://github.com/SebastianVernis/SAAS-DND#readme",
  "dependencies": {
    "@codemirror/autocomplete": "^6.20.0",
    "@codemirror/commands": "^6.10.1",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/language": "^6.12.1",
    "@codemirror/state": "^6.5.3",
    "@codemirror/view": "^6.39.6",
    "codemirror": "^6.0.2"
  }
}
