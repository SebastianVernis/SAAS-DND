# SAAS-DND Environment Variables
# Copy this file to .env and fill in your values

# Environment
NODE_ENV=development

# Database (PostgreSQL)
DB_NAME=saasdnd
DB_USER=saasdnd
DB_PASSWORD=your-secure-password
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@localhost:5432/${DB_NAME}

# JWT
JWT_SECRET=change-this-to-a-very-long-random-string-min-32-characters
JWT_EXPIRES_IN=7d

# Frontend URL
FRONTEND_URL=http://localhost:5173
NEXT_PUBLIC_API_URL=http://localhost/api

# SMTP Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM="SAAS-DND <noreply@saasdnd.com>"

# Redis (optional)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# Stripe (mockup mode para MVP)
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_MOCKUP_MODE=true

# OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Paths for demos (docker-compose)
VANILLA_PATH=/home/admin/DragNDrop/versions/v1-vanilla-standalone
LANDING_PATH=/home/admin/DragNDrop/versions/v2-landing-page

# Monitoring (optional)
SENTRY_DSN=https://...
POSTHOG_API_KEY=phc_...

# Logs
LOG_LEVEL=debug
